<mjml>
  <%- include('./common/head.ejs'); %>
  <mj-body background-color="#f9fafc">
    <mj-wrapper padding="10px 20px">
      <mj-section background-color="#ffffff" padding-top="0">
        <mj-column>
          <mj-text>
            Bonjour <%= data.recipient.firstname %> <%= data.recipient.lastname
            %>,<br />
            <br />
            Nous avons bien pris en compte votre demande d’accès à Sirius. <br />
            <br />
            Pour y accéder, activez votre compte en cliquant sur le lien
            ci-dessous :<br />
          </mj-text>
          <mj-button
            href="<%= utils.getPublicUrl(`/confirmer-utilisateur?token=${data.confirmationToken}`) %>"
            background-color="#6B46C1"
            color="white"
          >
            Lien d'activation
          </mj-button>
          <mj-text>
            Pour toute question, contactez-nous à l'adresse suivante:
            contact-sirius@inserjeunes.beta.gouv.fr<br />
          </mj-text>
          <%- include('./common/signature.ejs'); %>
        </mj-column>
      </mj-section>
    </mj-wrapper>
  </mj-body>
</mjml>
